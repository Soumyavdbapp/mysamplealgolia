<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<%= form_tag(recipes_path, :method => 'get', :authenticity_token => false) do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil, :class => "button prefix"  %>

<% end %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render 'list' %>
  </tbody>
</table>
<% unless @recipes.is_a?(Array)%>
    <%= paginate @recipes %>
<% end %>
<br>

<%= link_to 'New Recipe', new_recipe_path %>
